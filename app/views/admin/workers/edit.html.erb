<div class="container">
  <div class="row">
    <h3 class="m-3 bg-light">
      <%= @worker.last_name %><%= @worker.first_name %>さんの情報編集画面
    </h3>
  </div>
  <%= form_with model: [:admin,@worker] do |f| %>
    <div class="field row">
      <div class="col-xl-2 mx-auto"><%= f.label :worker_id, "会員ID" %></div>
      <div class="col-xl-6 mx-auto"><%= @worker.id %></div>
    </div>
    <div class="field row">
      <div class="col-xl-2 mx-auto"><%= f.label :name, "氏名" %></div>
      <div class="col-xl-6 mx-auto form-inline">
        <%= f.text_field :last_name, class: "form-control mr-2 mb-2" %>
        <%= f.text_field :first_name, class: "form-control mb-2" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-xl-2 mx-auto"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-xl-6 mx-auto"><%= f.email_field :email, autocomplete: "email", class: "form-control mb-2" %></div>
    </div>

    <div class="field row">
      <div class="col-xl-2 mx-auto"><%= f.label :is_deleted, "会員ステータス" %></div>
      <div class="col-xl-6 mx-auto">
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会", value: true %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効", value: false %>
       </div>
    </div>
    <div class="field row">
      <div class="col-xl-2 mx-auto"></div>
      <div class="col-xl-6 mx-auto mb-5 mt-3"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>