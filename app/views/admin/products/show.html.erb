<div class="container mt-5 mb-5">
  <div class="row">
    <h3 class="ml-3 bg-light">商品詳細</h3>
  </div>
  <div class="row">

      <table class="table table-hover table-inverse mx-3">
        <tbody>
          <tr>
            <td>商品ID</td>
            <td><%= @product.id %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= @product.name%></td>
          </tr>
          <tr>
            <td>工程</td>
            <td><%= @product.production_process.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @product.introduction %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to '編集する', edit_admin_product_path(@product.id), class: "btn btn-success ml-3" %>
    </div>
  </div>
</div>