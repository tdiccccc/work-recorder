<div class="container">
  <%= form_with model: @worker do |f| %>
    <div class="row">
      <h3 class="m-3 bg-light">従業員情報更新</h3>
    </div>

    <div class="field row mb-3">
      <div class="col-xl-3"><%= f.label :name, "名前" %></div>
      <div class="col-xl-6 form-inline">
        <%= f.label :last_name, "(姓)", class: "pr-2" %>
        <%= f.text_field :last_name, autofocus: true, class: "form-control mr-2" %>
        <%= f.label :first_name, "(名)", class: "pr-2" %>
        <%= f.text_field :first_name, class: "form-control mr-2" %>
      </div>
    </div>

    <div class="field row mb-3">
      <div class="col-xl-3"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-xl-6"><%= f.email_field :email, autocomplete: "email", class: "form-control col-xl col-md-6" %></div>
    </div>

    <div class="row my-5">
      <div class="col-xl-2"></div>
      <div class="col-xl-6 form-inline">
        <div class="mr-5">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <%end%>
</div>