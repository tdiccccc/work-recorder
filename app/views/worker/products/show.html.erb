<div class="container my-5">
  <div class="row">
    <h3 class="ml-3 bg-light">商品詳細</h3>
  </div>

  <div class="row">
    <table class="table table-hover table-inverse mx-3">
      <tbody>
        <tr>
          <td>商品ID</td>
          <td><%= @product.id %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= @product.name%></td>
        </tr>
        <tr>
          <td>工程</td>
          <td><%= @product.production_process.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @product.introduction %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @progress do |f| %>
      <div class="row my-4 form-group">
        <%= f.hidden_field :product_id, :value => @product.id %>
        <%= f.label "部数", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6 col">
          <%= f.number_field :product_count,class: "form-control", placeholder: '例)1000'%>
        </div>
        <div class="col-sm-2 col">
          <%= f.submit 'この商品を開始する', class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>