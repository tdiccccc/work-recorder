<div class="container">
  <div class="row">
    <h3 class="bg-light my-5"><strong><%= @worker.last_name %><%= @worker.first_name %></strong>さんの<strong>履歴</strong></h3>
  </div>

  <div class="row justify-content-center">
    <table class="table table-hover table-inverse">
      <thead>
        <tr class="bg-light">
          <th>完了日時</th>
          <th>商品名</th>
          <th>工程</th>
          <th>部数</th>
          <th>時間(h)</th>
          <th>部/h</th>
        </tr>
      </thead>
      <tbody>
       <% @progresses.each do |progress| %>
        <tr>
          <td>
            <% if progress.end_time == nil %>
              <%= link_to '進行中', progress_path(progress.id) %>
            <% else %>
              <%= link_to progress.end_time.to_s(:datetime_jp),progress_path(progress.id) %>
            <% end %>
          </td>
          <td><%= progress.product.name %></td>
          <td><%= progress.product.production_process.name %></td>
          <td><%= progress.product_count %>　部</td>
          <td>
            <% if progress.end_time == nil %>
              進行中
            <% else %>
              <%= progress.time_diff.round(1) %>　h
            <% end %>
          </td>
          <td>
            <% if progress.end_time == nil %>
              進行中
            <% else %>
              <%= progress.count_per_hour.to_i %>　部/h
            <% end %>
          </td>
        </tr>

       <% end %>
      </tbody>
    </table>
    <%= paginate @progresses %>
  </div>
</div>