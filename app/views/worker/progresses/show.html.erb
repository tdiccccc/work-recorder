<div class="container mt-5 mb-5">
  <div class="row">
    <h3 class="bg-light">進捗商品詳細</h3>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>担当</td>
          <td><%= @progress.worker.last_name %> <%= @progress.worker.first_name %></td>
        </tr>
        <tr>
          <td>商品ID</td>
          <td><%= @progress.product.id %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= @progress.product.name%></td>
        </tr>
        <tr>
          <td>工程</td>
          <td><%= @progress.product.production_process.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @progress.product.introduction %></td>
        </tr>
        <tr>
          <td>部数</td>
          <td><%= @progress.product_count %>部</td>
        </tr>
        <tr>
          <td>開始時間</td>
          <td>
            <% if @progress.begin_time != nil %>
              <%= @progress.begin_time.to_s(:datetime_jp) %>
            <%end%>
          </td>
        </tr>
        <tr>
          <td>完了時間</td>
          <td>
            <% if @progress.end_time == nil %>
              進行中
            <% else %>
              <%= @progress.end_time.to_s(:datetime_jp) %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <% if current_worker == @progress.worker %>
    <div class="row">
      <%= link_to '編集する', edit_progress_path(@progress), class: 'btn btn-success' %>
    </div>
    <%end%>
  </div>